<!DOCTYPE html>
<html>
<head>
  <title>EasyBoni Ruby on Rails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'EasyBoni Ruby on Rails', '/', { class: 'navbar-brand' } %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Map', map_path, 'data-no-turbolink' => true %></li>
        <li><%= link_to 'List', list_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <p class="navbar-text"><%= current_user.first_name %> <%= current_user.last_name %></p>
          </li>
          <li>
            <%= link_to 'Log out', logout_path, method: 'delete' %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Log in', login_path %>
          </li>
        <% end %>
      </ul>
    </div>


  </div>
</div>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
